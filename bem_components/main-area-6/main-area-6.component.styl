@import 'nib'

$bg-color = #FFF
$lk-yellow = #fcde02
$lk-green = #8ac500

$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px
$full-hd = 1920px

$container-width = 1550px

.likearts-content .main-area--6
	background-image url('../../img/bg/bg-5.jpg')
	background-color #e9d8c2
	color #000
	
.likearts-content .main-area--6 .main-container
	position relative
	
.likearts-content .main-area--6 .main-container__title
	font-family 'Intro'
	font-weight 900
	margin 0
	
.likearts-content .main-area--6 .main-container__content
	flex-flow column wrap
	width 100%
	max-width 1030px
	margin 50px auto
	@media screen and (max-width: 992px)
		margin 50px 0
		padding 0 20px

.likearts-content .main-area--6 .main-container__title--h2
	font-size 3.6rem
	text-align left
	width 100%
	margin 0 0 0 10px
	@media screen and (max-width: 992px)
		font-size 5rem
		text-align center
		margin 0
	@media screen and (max-width: $phone)
		font-size 3rem
		
.likearts-content .main-area--6 .carousel-area
	width 100%
	
.likearts-content .main-area--6 .lk-carousel
	width 100%
	height auto
	margin 35px 0 0 0

.likearts-content .main-area--6 .lk-carousel__item
	width calc(33.33% - 10px)
	height auto
	background-color #FFF
	margin 10px
	border-radius 2px
	padding 20px
	
.likearts-content .main-area--6 .info__pic
	width 100%
	
.likearts-content .main-area--6 .info__description
	margin 20px 0 0 0
	
.likearts-content .main-area--6 .info__name
	display block
	color #000
	font-size 2.2rem
	transition color .2s ease-in-out
	&:hover
		color $lk-green
	@media screen and (max-width: $tablet)
		font-size 1.7rem
	@media screen and (max-width: $phone)
		font-size 1.3rem
	
.likearts-content .main-area--6 .info__detial
	margin 5px 0 0 0
	flex-flow row wrap
	
.likearts-content .main-area--6 .info__subscribers
	width 50%
	line-height 1
	@media screen and (max-width: $tablet)
		width 100%
	
.likearts-content .main-area--6 .info__count
	font-weight 900
	font-size 2.2rem
	color $lk-green
	@media screen and (max-width: $tablet)
		font-size 1.7rem
	
.likearts-content .main-area--6 .info__sign
	color #bdbdbd
	font-size 1.2rem
	
.likearts-content .main-area--6 .info__social
	width 50%
	justify-content flex-end
	margin 10px 0 0 0
	@media screen and (max-width: $tablet)
		width 100%
		justify-content center
		margin 20px 0 0 0
	
.likearts-content .main-area--6 .info__social-item
	display block
	margin 0 5px
	opacity 0.3
	&:hover
		opacity 1
		
.likearts-content .main-area--6 .list-area
	width 100%
	margin 0 0 100px 0
	@media screen and (max-width: 992px)
		flex-flow row wrap
		margin 0
		
.likearts-content .main-area--6 .list-area__column
	width calc(33.33% - 10px)
	height auto
	margin 5px 10px 10px 10px
	@media screen and (max-width: 992px)
		width 100%
		margin 0 10px
		
.likearts-content .main-area--6 .list-area__item
	width 100%
	height auto
	background-color rgba(255, 255, 255, 0.4)
	border-radius 2px
	margin 5px 0
	justify-content flex-start
	@media screen and (max-width: 992px)
		&:last-child
			margin 5px 0 0 0
			
.likearts-content .main-area--6 .detail__name
	display block
	font-size 1.6rem
	font-weight 600
	color #000
	transition color .2s ease-in-out
	&:hover
		color $lk-green
	
.likearts-content .main-area--6 .detail__count
	font-size 2rem
	color #adb796
	
.likearts-content .main-area--6 .detail__sign
	font-size 1.2rem
	color #c2c2c2
	