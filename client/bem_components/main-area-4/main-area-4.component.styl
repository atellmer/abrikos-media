@import 'nib'

$bg-color = #FFF
$lk-yellow = #fcde02
$lk-green = #8ac500

$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px
$full-hd = 1920px

$container-width = 1550px

.likearts-content .main-area--4
	background-color #f4f4f4
	color #000
	
.likearts-content .main-area--4 .main-container
	position relative
	
.likearts-content .main-area--4 .main-container__title
	font-family 'Intro'
	font-weight 900
	margin 0
	
.likearts-content .main-area--4 .main-container__content
	flex-flow column wrap
	width 100%
	max-width 1200px
	margin 50px auto
	min-height 750px
	@media screen and (max-width: 992px)
		margin 50px 0
		padding 0 20px
	@media screen and (max-width: 920px)
		min-height 0
	@media screen and (max-width: $phone)
		margin 50px 0 0 0

.likearts-content .main-area--4 .main-container__title--h2
	font-size 4.5rem
	text-align center
	max-width 500px
	@media screen and (max-width: 1200px)
		font-size 3rem
		max-width 300px
	@media screen and (max-width: 1080px)
		font-size 2rem
	@media screen and (max-width: 920px)
		max-width none
		
.likearts-content .main-area--4 .tooltips-area--desktop
	@media screen and (max-width: 920px)
		display none
		
.likearts-content .main-area--4 .tooltips-area--desktop .tooltips-area__item
	position absolute
	flex-flow column wrap
	color #FFF
	text-align center
	padding 10px 40px
	@media screen and (max-width: 1200px)
		padding 10px 30px
	
