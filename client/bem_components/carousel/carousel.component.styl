@import 'nib'
	
.likearts-content .slick-prev,
.likearts-content .slick-next
	font-size 0
	line-height 0
	position absolute
	top 50%
	display block
	width 60px
	height 60px
	padding 0
	-webkit-transform translate(0, -50%)
	-ms-transform translate(0, -50%)
	transform translate(0, -50%)
	cursor pointer
	color transparent
	border none
	outline none
	background transparent
	
.likearts-content .slick-prev::hover,
.likearts-content .slick-prev::focus,
.likearts-content .slick-next::hover,
.likearts-content .slick-next::focus
	color transparent
	outline none
	background transparent

.likearts-content .slick-prevhover::before,
.likearts-content .slick-prevfocus::before,
.likearts-content .slick-nexthover::before,
.likearts-content .slick-nextfocus::before
	opacity 1

.likearts-content .slick-prev.slick-disabled::before,
.likearts-content .slick-next.slick-disabled::before
	opacity .25


.likearts-content .slick-prev::before,
.likearts-content .slick-next::before
	font-size 20px
	line-height 1
	opacity .75
	color white

.likearts-content .slick-prev
	left -50px
	@media screen and (max-width: 1130px)
		left -45px

.likearts-content .slick-prev::before
	content '‹'
	font-size 10rem
	color #000
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -60%)

[dir='rtl'] .slick-prev::before
	content '‹'

.likearts-content .slick-next
	right -50px
	@media screen and (max-width: 1130px)
		right -45px

[dir='rtl'] .slick-next
	right auto
	left -25px
	
.likearts-content .slick-next::before
	content '›'
	font-size 10rem
	color #000
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -60%)

[dir='rtl'] .slick-next::before
	content '›'


