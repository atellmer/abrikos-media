@import 'nib'

$bg-color = #FFF
$lk-yellow = #fcde02
$lk-green = #8ac500

$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px
$full-hd = 1920px

$container-width = 1550px

.likearts-content .main-area--2
	background-image url('../../img/bg/bg-2.jpg')
	background-color #333333
	color #FFF
	
.likearts-content .main-area--2 .main-container
	position relative
	
.likearts-content .main-area--2 .main-container__title
	font-family 'Intro'
	font-weight 900
	margin 0
	
.likearts-content .main-area--2 .main-container__content
	flex-flow column wrap
	width 100%
	max-width 1200px
	margin 50px auto
	@media screen and (max-width: 992px)
		margin 50px 0
		padding 0 20px

.likearts-content .main-area--2 .main-container__title--h2
	font-size 6rem
	color #000
	text-align left
	width 100%
	@media screen and (max-width: 992px)
		font-size 5rem
		text-align center
	@media screen and (max-width: $phone)
		font-size 3rem
		
.likearts-content .main-area--2 .main-container__description
	width 100%
	max-width 1300px
	font-size 3.4rem
	font-weight 600
	font-style italic
	text-align center
	margin 70px 0 80px 0
	@media screen and (max-width: 1400px)
		font-size 3rem
	@media screen and (max-width: 992px)
		font-size 2rem
		margin 40px 0
	@media screen and (max-width: $phone)
		font-size 1.5rem
		margin 20px 0
		
.likearts-content .main-area--2 .steps-area
	width 100%
	color #000
	margin 30px 0
	flex-flow row wrap
	align-items flex-start
	@media screen and (max-width: 992px)
		margin 0
	
.likearts-content .main-area--2 .steps-area__item
	width 33.3333%
	margin 50px 0
	@media screen and (max-width: 992px)
		width 50%
		margin 20px 0
	@media screen and (max-width: $tablet)
		width 100%
	@media screen and (max-width: $phone)
		margin 10px 0
	
.likearts-content .main-area--2 .steps-area__num
	font-family 'Intro'
	font-weight 400
	font-size 1.4rem
	@media screen and (max-width: $tablet)
		text-align center
	
.likearts-content .main-area--2 .steps-area__icon
	display inline-block
	position relative
	top 4px
	@media screen and (max-width: $tablet)
		transform scale(0.8)
		margin 0 auto
	
.likearts-content .main-area--2 .steps-area__content
	position relative
	margin 20px 0 0 0
	justify-content flex-start
	align-items flex-start
	flex-flow row wrap
	@media screen and (max-width: $tablet)
		margin 0
	
.likearts-content .main-area--2 .steps-area__text
	display inline-block
	width 70%
	margin  0 0 0 20px
	padding 0 10px
	font-size 1.8rem
	font-weight 600
	@media screen and (max-width: 992px)
		font-size 1.5rem
	@media screen and (max-width: $tablet)
		font-size 1.4rem
		width 100%
		margin 5px 0
		padding 0
		text-align center
	@media screen and (max-width: $phone)
		font-size 1.2rem