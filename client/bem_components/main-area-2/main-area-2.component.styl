@import 'nib'

$bg-color = #FFF
$lk-yellow = #fcde02
$lk-green = #8ac500

$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px
$full-hd = 1920px

$container-width = 1550px

.likearts-content .main-area--2
	background-image url('../../img/bg/bg-2.jpg')
	background-color #333333
	color #FFF
	
.likearts-content .main-container
	position relative
	
.likearts-content .main-container__title
	font-family 'Intro'
	font-weight 900
	margin 0
	
.likearts-content .main-container__content
	flex-flow column wrap
	margin-top 150px
	@media screen and (max-width: 992px)
		margin 50px 0
	@media screen and (max-width: $phone)
		margin 20px 0

.likearts-content .main-container__title--h1
	font-size 10rem
	text-align center
	@media screen and (max-width: 1200px)
		font-size 8rem
	@media screen and (max-width: 992px)
		font-size 5rem
	@media screen and (max-width: $phone)
		font-size 3rem
		
.likearts-content .main-container__description
	width 100%
	max-width 1300px
	font-size 3.4rem
	font-weight 600
	font-style italic
	text-align center
	margin 70px 0 80px 0
	@media screen and (max-width: 1400px)
		font-size 3rem
	@media screen and (max-width: 992px)
		font-size 2rem
		margin 40px 0
	@media screen and (max-width: $phone)
		font-size 1.5rem
		margin 20px 0
	